<view class="container">

  <!-- <view class="login-icon"> 
 <image class="login-img" src="../../img/loginLog.jpg">这是一个log</image> 
 </view>   -->

  <view class="login-from" >
    <van-cell-group>
      <van-field  model:value="{{ userName }}" required clearable label="用户名" icon="question-o" placeholder="请输入用户名"
        bind:click-icon="onClickIcon" />

      <van-field model:value="{{ password }}" type="password" label="密码" placeholder="请输入密码" required border="{{ false }}" />
    </van-cell-group>
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="login">绑定</button>
    </view>
  </view>
</view>